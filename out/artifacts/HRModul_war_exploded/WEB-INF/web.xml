    </servlet-mapping>
<!--    Countries-->
    <servlet>
        <servlet-name>countries</servlet-name>
        <servlet-class>az.hrmodule.controller.CountriesController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>countries</servlet-name>
        <url-pattern>/countries</url-pattern>
        <url-pattern>/newCountry</url-pattern>
        <url-pattern>/saveCountry</url-pattern>
    </servlet-mapping>

<!--    Regions-->
    <servlet>
        <servlet-name>regions</servlet-name>
        <servlet-class>az.hrmodule.controller.RegionsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>regions</servlet-name>
        <url-pattern>/regions</url-pattern>
    </servlet-mapping>

</web-app>