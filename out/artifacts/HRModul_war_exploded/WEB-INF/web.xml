<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--     Employee-->
    <servlet>
        <servlet-name>employee</servlet-name>
        <servlet-class>az.hrmodule.controller.EmployeeController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>employee</servlet-name>
        <url-pattern>/employee/list</url-pattern>
        <url-pattern>/employee/newPerson</url-pattern>
        <url-pattern>/employee/saveEmployee</url-pattern>
        <url-pattern>/employee/edit</url-pattern>
        <url-pattern>/employee/updateEmployee</url-pattern>
        <url-pattern>/employee/delete</url-pattern>
        <url-pattern>/employee/edit/position</url-pattern>
        <url-pattern>/employee/updateJob</url-pattern>


    </servlet-mapping>

<!--    Registration-->
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>az.hrmodule.controller.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

<!--    Job history-->
    <servlet>
        <servlet-name>jobHistory</servlet-name>
        <servlet-class>az.hrmodule.controller.JobHistoryController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>jobHistory</servlet-name>
        <url-pattern>/jobHistory</url-pattern>
        <url-pattern>/saveJobHistory</url-pattern>
    </servlet-mapping>

<!--    Jobs-->
