        <servlet-name>departments</servlet-name>
        <servlet-class>az.hrmodule.controller.DepartmentsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>departments</servlet-name>
        <url-pattern>/departments</url-pattern>
        <url-pattern>/newDepartment</url-pattern>
        <url-pattern>/saveDepartment</url-pattern>
    </servlet-mapping>

<!--    Locations-->
    <servlet>
        <servlet-name>locations</servlet-name>
        <servlet-class>az.hrmodule.controller.LocationsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>locations</servlet-name>
        <url-pattern>/locations</url-pattern>
        <url-pattern>/newLocation</url-pattern>
