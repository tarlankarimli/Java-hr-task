<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>employee</servlet-name>
        <servlet-class>az.hrmodule.controller.EmployeeController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>employee</servlet-name>
        <url-pattern>/employee/list</url-pattern>
        <url-pattern>/employee/newPerson</url-pattern>
        <url-pattern>/employee/save</url-pattern>
        <url-pattern>/employee/edit</url-pattern>
        <url-pattern>/employee/delete</url-pattern>
        <url-pattern>/employee/job_history</url-pattern>
        <url-pattern>/employee/department_list</url-pattern>
        <url-pattern>/employee/newDepartment</url-pattern>
        <url-pattern>/employee/regions</url-pattern>
        <url-pattern>/employee/countries</url-pattern>
        <url-pattern>/employee/newCountry</url-pattern>
        <url-pattern>/employee/saveCountry</url-pattern>

    </servlet-mapping>

</web-app>